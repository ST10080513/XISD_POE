<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Transaction Details -->
        <TextView
            android:id="@+id/paymentIdTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaction ID: 1730073678193"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/paymentMethodTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Method: credit"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/amountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount: R200.00"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/transactionDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaction Date: 2024-10-28"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/black" />

        <!-- Product Details -->
        <TextView
            android:id="@+id/productsPurchasedTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Products Purchased:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:id="@+id/productDetailsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp">

            <!-- Example Product Detail Entry -->
            <TextView
                android:id="@+id/productNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢ Sack of Potatoes"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/productQuantityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity: 1"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/productPriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price per unit: R200.00"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/productTotalTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total: R200.00"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="2dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
